<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	android:background="#FFFFFF"
     android:orientation="vertical"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     >
     <TextView  android:id="@+id/textBanner"
	     android:background="@drawable/topfirstscreen"
         android:layout_width="fill_parent"
		 android:layout_height="10mm"
         android:text=""/>

   <TextView  android:id="@+id/labelmodelo"
		 android:background="#FFFFFF"
         android:layout_width="fill_parent"
         android:layout_height="20dip"
     	 android:textColor="#D7862A"
     	 android:paddingLeft ="5mm"
     	 android:textSize="15dip"
         android:text="Audi A3 3.0 TDI 5 Triptonic 3p"/>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#FFFFFF"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dip">
    <ImageView
    
        android:id="@+id/noimage"
        android:layout_width="20mm"
        android:layout_height="20mm"
        android:layout_marginRight="15dip"
        android:src="@drawable/noimage" />
    <LinearLayout
		android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="90dip">
    
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dip"
            android:layout_weight="1" 
            android:id="@+id/labelano"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textSize="8dip"
            android:text="Año: 2010"/>
            
        />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dip"
            android:layout_weight="1" 
            android:id="@+id/labelcombustible"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textSize="8dip"
            android:text="Combustible: Nafta"/>
            
        />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dip"
            android:layout_weight="1" 
            android:id="@+id/labelprecio"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textSize="8dip"
           android:text="Precio $ 21.000"/>
            
        />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="12dip"
            android:layout_weight="1" 
            android:id="@+id/labelkm"
            android:singleLine="true"
            android:textSize="10dip"
            android:ellipsize="marquee"
            android:text="Km: 0"/>
            
        />
 		<TextView
            android:layout_width="fill_parent"
            android:layout_height="12dip"
            android:layout_weight="1" 
            android:id="@+id/labelsegmento"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textSize="10dip"
            android:text="Segmanto: Seddan 4P"/>
            
        />
        	<TextView
            android:layout_width="fill_parent"
            android:layout_height="12dip"
            android:layout_weight="1" 
            android:id="@+id/labelcolor"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textSize="10dip"
            android:text="Color: Rojo"/>
            
        />
        
    </LinearLayout>
  </LinearLayout>
  
       <TextView
            android:layout_width="fill_parent"
            android:layout_height="12dip"
            android:layout_weight="1" 
            android:id="@+id/labelfromapago"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:paddingLeft ="5mm"
            android:textSize="10dip"
            android:text="Forma de Pago: Contado"/>
          
        />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="12dip"
            android:layout_weight="1" 
            android:id="@+id/labelprov"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:paddingLeft ="5mm"
            android:textSize="10dip"
            
            android:text="Prov/Loc: Capital Federal, Nuñez"/>
        />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="12dip"
            android:layout_weight="1" 
            android:id="@+id/buttonCaracteristica"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:paddingLeft ="5mm"
            android:textSize="10dip"
            android:textColor="#D7862A"
            android:text="Ver accesorios"/>
            
        />
        
        <TextView
            android:layout_width="fill_parent"
            android:gravity="right"
            android:layout_height="12dip"
            android:layout_weight="1" 
            android:id="@+id/buttonFotosvertodas"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textSize="10dip"
            android:textColor="#D7862A"
            android:paddingRight ="5mm"
            android:text="Ver Todas las fotos"/>
            
        />

        
        <Gallery xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/examplegallery"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" />

		<TextView  android:id="@+id/buttonContacto"
	     android:background="@drawable/botoncontactar"
         android:layout_width="fill_parent"
		 android:layout_height="7mm"
         android:text=""/>
		
</LinearLayout>